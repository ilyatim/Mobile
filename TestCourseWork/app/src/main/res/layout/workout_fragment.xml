<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <variable
                name="viewModel"
                type="com.example.testcoursework.viewModel.WorkoutViewModel" />
    </data>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".ui.mFragment.WorkoutFragment">

        <com.loopeer.shadow.ShadowView
                android:id="@+id/historyOfTrainingView"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="20dp"
                android:clickable="true"
                android:elevation="10dp"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:backgroundColor="@color/top_bar_background"
                app:cornerRadiusBL="34dp"
                app:cornerRadiusBR="34dp"
                app:shadowMarginBottom="10dp"
                app:shadowColor="@color/shadow"
                app:shadowRadius="10dp">

            <TextView
                    android:alpha="0"
                    android:id="@+id/historyTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_gravity="center"
                    android:textSize="@dimen/headerOfTextSize"
                    android:textColor="@color/white"
                    android:text="@string/historyOfUrEx"/>
        </com.loopeer.shadow.ShadowView>

        <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ProgressBar
                    android:layout_centerInParent="true"
                    android:id="@+id/progressBar2"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:visibility="@{viewModel.visibility ? View.VISIBLE : View.GONE}"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/floatingActionButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="451dp"
                    android:layout_marginEnd="42dp"
                    android:visibility="@{viewModel.visibility ? View.GONE : View.VISIBLE}"
                    android:backgroundTint="@color/floating_action_button_background"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/workout_fragment_ic_plusbold"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

            </androidx.recyclerview.widget.RecyclerView>

        </RelativeLayout>
    </LinearLayout>
</layout>
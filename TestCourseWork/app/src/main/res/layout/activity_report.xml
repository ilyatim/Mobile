<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
            <variable
                    name="viewModel"
                    type="com.example.testcoursework.viewModel.ReportActivityViewModel" />
    </data>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.activity.ReportActivity">
            <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

            </LinearLayout>
            <com.loopeer.shadow.ShadowView
                    android:layout_weight="0"
                    android:id="@+id/historyOfTrainingView"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:clickable="true"
                    android:elevation="10dp"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:backgroundColor="@color/top_bar_background"
                    app:cornerRadiusTL="34dp"
                    app:cornerRadiusTR="34dp"
                    app:shadowColor="@color/shadow"
                    app:shadowRadius="10dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                    <TextView
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:id="@+id/statisticsTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/headerOfTextSize"
                            android:textColor="@color/white"
                            android:text="@string/statistics"
                            android:layout_gravity="center_horizontal"/>
                    <CalendarView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="10dp"
                            android:dateTextAppearance="@style/CalendarViewCustom"
                            android:weekDayTextAppearance="@style/CalendarViewCustom">

                    </CalendarView>
                </LinearLayout>
                <!--<LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:baselineAligned="false"
                        android:layout_height="match_parent">
                    <TextView
                            android:layout_marginStart="60dp"
                            android:id="@+id/statisticsTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:textSize="@dimen/headerOfTextSize"
                            android:textColor="@color/white"
                            android:text="@string/statistics"/>
                    <ImageView
                            android:src="@drawable/ic_left_chevron"
                            android:layout_marginStart="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:contentDescription="@string/left_chevron"
                            android:layout_marginEnd="10dp"/>
                    <TextView
                            android:drawableStart="@drawable/report_activity_ic_calendar"
                            android:id="@+id/dateTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"/>-->

                <!--</LinearLayout>-->
            </com.loopeer.shadow.ShadowView>
    </LinearLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/yellowBack"
        tools:context=".ui.MainActivity">


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="@string/russian"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/textColor"
                android:id="@+id/languageFromWhichTranslate"
                android:layout_weight="5"
                android:gravity="center"/>
        <ImageButton
                android:layout_width="82dp"
                android:layout_height="49dp"
                app:srcCompat="@drawable/doublehorizontalarrow"
                android:id="@+id/buttonReverse"
                android:scaleType="centerInside"
                android:background="@color/transparentBackground" android:layout_weight="1"/>
        <TextView
                android:text="@string/english"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/textColor"
                android:id="@+id/languageToWhichTranslate"
                android:layout_weight="5"
                android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/back_rounding_corners">
        <EditText
                android:layout_margin="10dp"
                android:text="@string/primaryText"
                android:gravity="start"
                android:textColor="@color/textColor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/textForTranslation_editText"
                android:layout_weight="2"
                android:inputType="text"
                android:imeOptions="actionGo"/>
        <TextView
                android:layout_margin="10dp"
                android:text=""
                android:textColor="@color/textColor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/translatedText_textView" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>